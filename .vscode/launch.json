{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "espidf",
        "name": "esp-debug-server",
        "request": "launch",
        "logLevel": 3,
        "mode": "manual",
        "verifyAppBinBeforeDebug": false,
        "tmoScaleFactor": 1,
        "initGdbCommands": [
          "target remote :3333",
          "symbol-file ${workspaceFolder}/build/${command:espIdf.getProjectName}.elf",
          "mon reset halt",
          "flushregs",
          "thb app_main"
        ],
        "env": {
          "CUSTOM_ENV_VAR": "SOME_VALUE"
        }
      },
      {
          "type": "cppdbg",
          "name": "OpenOCD Debug",
          "request": "launch",
          "miDebuggerPath": "/home/jrsharp/.espressif/tools/xtensa-esp32-elf/esp-2021r2-patch5-8.4.0/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb",
          "program": "${workspaceFolder}/build/${command:espIdf.getProjectName}.elf",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              },
              {
                  "text": "symbol-file '${workspaceFolder}/build/${command:espIdf.getProjectName}.elf'"
              },
              {
                  "text": "target remote :3333"
              },
              {
                  "text": "monitor reset halt"
              },
              {
                  "text": "flushregs"
              },
              {
                  "text": "thb app_main"
              }
          ],
          "externalConsole": false,
          "cwd": "${workspaceFolder}/build/",
          "logging": {
              "trace": true,
              "traceResponse": true,
              "engineLogging": true
          }
      }
  ]
}
